<div class="col-lg-12">
  <div class="card chadow mt-5 mb-5">
    <div class="card-header">
      <h3><%= @booking.seminar.name %></h3>
    </div>
    <div class="card-body">
      <h3><%= @booking.customer.full_name %> / <%= @booking.customer.email_address %></h3>
      <h4>Booking Details:</h4>
      <p>Number of tickets: <strong><%= @booking.ticket_qty %></strong></p>
      <p>The paper: <strong><%= to_dollars(@booking.amount_paid) %></strong></p>
      <div class="row mt-3">
        <div class="col-sm-7">
          <h6>From:
            <span class="badge badge--secondary">
              <%= @booking.seminar.start_date.strftime('%a') %> <%= @booking.seminar.duration_expression %>
            </span>
          </h6>
          <h6>Hours:
            <span class="badge badge--secondary">
              <%= @booking.seminar.daily_hours_expression %>
            </span>
          <h6>
        </div>
      </div>
    </div>
  </div>
</div>
